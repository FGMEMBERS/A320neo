<?xml version="1.0" encoding="UTF-8" ?>

<!-- Airbus Fly-by-Wire -->

<PropertyList>

	<!-- Basic Pitch and Roll Rate Controls -->

	<pid-controller>
		<name>FBW Pitch Rate G-force Control</name>
		<debug type="bool">false</debug>
		<enable>
			<prop>/fbw/active-pitch</prop>
		</enable>
		<input>
			<prop>/accelerations/pilot-gdamped</prop>
			<!-- prop>/orientation/pitch-rate-degps</prop -->
		</input>
		<reference>
			<prop>/fbw/target-pitch-gforce</prop>
			<!-- prop>/fbw/target-pitch-rate</prop -->
		</reference>
		<output>
			<prop>/fdm/jsbsim/fcs/elevator-fbw-output</prop>
		</output>
		<config>
			<Kp>-0.05</Kp>
			<beta>1</beta>
			<alpha>0.1</alpha>
			<gamma>0</gamma>
			<Ti>10</Ti>
			<Td>0.000000001</Td>
			<u_min>-1</u_min>
			<u_max>1</u_max>
		</config>
	</pid-controller>
	
	<pid-controller>
		<name>FBW Roll Rate Control</name>
		<debug type="bool">false</debug>
		<enable>
			<prop>/fbw/active-bank</prop>
		</enable>
		<input>
			<prop>/orientation/roll-rate-degps</prop>
		</input>
		<reference>
			<prop>/fbw/target-roll-rate</prop>
		</reference>
		<output>
			<prop>/fdm/jsbsim/fcs/aileron-fbw-output</prop>
		</output>
		<config>
			<Kp>0.05</Kp>
			<beta>1</beta>
			<alpha>0.1</alpha>
			<gamma>0</gamma>
			<Ti>10</Ti>
			<Td>0.000000001</Td>
			<u_min>-1</u_min>
			<u_max>1</u_max>
		</config>
	</pid-controller>
	
	<!-- Pitch and Bank Limiters -->
	
	<pid-controller>
		<name>FBW Pitch Hold</name>
		<debug type="bool">false</debug>
		<enable>
			<prop>/fbw/pitch-hold</prop>
		</enable>
		<input>
			<prop>/orientation/pitch-deg</prop>
		</input>
		<reference>
			<prop>/fbw/target-pitch</prop>
		</reference>
		<output>
			<prop>/fdm/jsbsim/fcs/elevator-fbw-output</prop>
		</output>
		<config>
			<Kp>-0.01</Kp>
			<beta>1</beta>
			<alpha>0.1</alpha>
			<gamma>0</gamma>
			<Ti>10</Ti>
			<Td>0.00001</Td>
			<u_min>-1</u_min>
			<u_max>1</u_max>
		</config>
	</pid-controller>
	
	<pid-controller>
		<name>FBW Bank Hold</name>
		<debug type="bool">false</debug>
		<enable>
			<prop>/fbw/bank-hold</prop>
		</enable>
		<input>
			<prop>/orientation/roll-deg</prop>
		</input>
		<reference>
			<prop>/fbw/target-bank</prop>
		</reference>
		<output>
			<prop>/fdm/jsbsim/fcs/aileron-fbw-output</prop>
		</output>
		<config>
			<Kp>0.01</Kp>
			<beta>1</beta>
			<alpha>0.1</alpha>
			<gamma>0</gamma>
			<Ti>10</Ti>
			<Td>0.000000001</Td>
			<u_min>-1</u_min>
			<u_max>1</u_max>
		</config>
	</pid-controller>

</PropertyList>
