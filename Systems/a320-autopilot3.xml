<!-- ====  V/S  ================================== -->


	<pid-controller>
		<name>Climb Rate Correction</name>
		<debug type="bool">false</debug>
		<enable>
			<property>/autopilot/internal/altitude-hold1</property>
			<value type="bool">true</value>
		</enable>
		<input>
			<!-- prop>/instrumentation/vertical-speed-indicator/indicated-speed-fpm</property-->
				<property>/autopilot/internal/vert-speed-fpm</property>
			
		</input>
		<reference>
			<property>/autopilot/settings/vertical-speed-fpm</property>
			
		</reference>
		<output>
			<property>/autopilot/internal/target-vertical-speed-deg-gain</property>
		</output>
		<config>
			<Kp>0.0003</Kp>
			<!--beta>1</beta-->
			<!--alpha>1</alpha-->
			<!--gamma>0</gamma-->
			<Ti>5</Ti>
			<!--Td>0.00001</Td-->
			<u_min>-5</u_min>
			<u_max>5</u_max>
		</config>
	</pid-controller>



	<filter>
		<name>Climb Rate Correction2</name>
		<debug>true</debug>
		<enable>
			<property>/autopilot/internal/altitude-hold1</property>
			<value type="bool">true</value>
		</enable>
		<type>gain</type>
		<gain>0.004</gain>
		<input>
			<expression>
				<dif>
					<property>/autopilot/settings/vertical-speed-fpm</property>
					<property>/autopilot/internal/vert-speed-fpm</property>
				</dif>
			</expression>
		</input>
		<output>/autopilot/internal/target-vertical-speed-deg-gain2</output>
		<min>-5.0</min>
		<max>5.0</max>
	</filter>

	<filter>
		<name>Vertical Mix</name>
		<debug>false</debug>
		<enable>
			<property>/autopilot/internal/altitude-hold1</property>
			<value type="bool">true</value>
		</enable>
		<type>gain</type>
		<gain>1</gain>
		<input>
			<expression>
				<sum>
					<property>/autopilot/internal/target-vertical-speed-deg</property>
					<property>/autopilot/internal/target-vertical-speed-deg-gain</property>
				</sum>
			</expression>
		</input>
		<output>/autopilot/internal/target-pitch-deg</output>
		<min>-17.0</min>
		<max>17.0</max>
	</filter>


 <!-- =============================================================== -->
 <!-- Velocity Modes                                                  -->
 <!-- =============================================================== -->

	 <!-- Auto throttle --> 
	<pid-controller>
		<name>Auto Throttle (5 sec lookahead)</name>
		<debug>false</debug>
		<enable>
			<condition>
				<and>
					<property>/autopilot/settings/autothrottle</property>
					<equals>
						<property>/autopilot/settings/speed-mode</property>
						<value>0</value>
					</equals>
				</and>
			</condition>
		</enable>
		<input>
			<!-- <property>/autopilot/internal/lookahead-5-sec-airspeed-kt</property> -->
			<property>/velocities/airspeed-kt</property>
		</input>
		<reference>
			<property>/autopilot/settings/target-speed-kt</property>
		</reference>
		<output>
			<property>/controls/engines/engine[0]/throttle</property>
			<property>/controls/engines/engine[1]/throttle</property>

		</output>
		<config>
			<Kp>0.1</Kp>        <!-- proportional gain -->
			<beta>1.0</beta>    <!-- input value weighing factor -->
			<alpha>0.1</alpha>  <!-- low pass filter weighing factor -->
			<gamma>0.0</gamma>  <!-- input value weighing factor for -->
			<!-- unfiltered derivative error -->
			<Ti>10.0</Ti>       <!-- integrator time -->
			<Td>0.00001</Td>    <!-- derivator time -->
			<u_min>0.0</u_min>  <!-- minimum output clamp -->
			<u_max>1.0</u_max>  <!-- maximum output clamp -->
		</config>
	</pid-controller>
	<pid-controller>
		<name>Mach hold</name>
		<debug type="bool">false</debug>
		<enable>
			<condition>
				<and>
					<property>/autopilot/settings/autothrottle</property>
					<equals>
						<property>/autopilot/settings/speed-mode</property>
						<value>1</value>
					</equals>
				</and>
			</condition>
		</enable>
		<input>
			<property>/velocities/mach</property>
		</input>
		<reference>
			<property>/autopilot/settings/target-speed-mach</property>
		</reference>
		<output>
			<property>/controls/engines/engine[0]/throttle</property>
			<property>/controls/engines/engine[1]/throttle</property>
		</output>
		<config>
			<Kp>20</Kp>
			<beta>1</beta>
			<alpha>0.1</alpha>
			<gamma>0</gamma>
			<Ti>10</Ti>
			<Td>0.00001</Td>
			<u_min>0</u_min>
			<u_max>1</u_max>
		</config>
	</pid-controller>
	

</PropertyList>
