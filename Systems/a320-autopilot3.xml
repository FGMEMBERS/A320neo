	<pi-simple-controller>
		<name>Heading Hold - Target Roll Computer</name>
		<debug type="bool">false</debug>
		<enable>
			<condition>
				<and>
					<equals>
						<property>/autopilot/settings/heading</property>
						<value>dg-heading-hold</value>
					</equals>
					<equals>
						<property>/autopilot/settings/heading-mode</property>
						<value>0</value>
					</equals>
				</and>
			</condition>
		</enable>
		<input>
			<property>/autopilot/internal/fdm-heading-bug-error-deg</property>
		</input>
		<reference>
			<value>0</value>
		</reference>
		<output>
			<property>/autopilot/internal/target-roll-deg</property>
		</output>
		<config>
			<Kp>-2.5</Kp>
			<Ki>0</Ki>

			<u_min>-30</u_min>
			<u_max>30</u_max>
			
		</config>
	</pi-simple-controller>


	<pid-simple-controller>
		<name>Ground track hold stage 1</name>
		<debug type="bool">false</debug>
		<enable>
			<condition>
				<and>
					<equals>
						<property>/autopilot/settings/heading</property>
						<value>dg-heading-hold</value>
					</equals>
					<equals>
						<property>/autopilot/settings/heading-mode</property>
						<value>1</value>
					</equals>
				</and>
			</condition>
		</enable>
		<input>
			<property>/autopilot/internal/fdm-track-bug-error-deg</property>
		</input>
		<reference>
			<value>0</value>
		</reference>
		<output>
			<property>/autopilot/internal/target-roll-deg</property>
		</output>
		<config>
			<Kp>-2.5</Kp>
			<Ki>0</Ki>

			<u_min>-30</u_min>
			<u_max>30</u_max>
		</config>
	</pid-simple-controller>
