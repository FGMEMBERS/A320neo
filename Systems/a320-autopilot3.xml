<!-- Airbus A320 Autopilot Configuration -->

<PropertyList>

 <!-- =============================================================== -->
 <!-- Surface Movement to Targeted Degres                             -->
 <!-- =============================================================== -->
	<pid-controller>
		<name>Elevator Surface</name>
		<debug type="bool">false</debug>
		<enable>
			<property>/autopilot/internal/altitude-hold</property>
			<value type="bool">true</value>
		</enable>
		<input>
			<property>/orientation/pitch-deg</property>
			<!--prop>/velocities/vertical-speed-fps</prop-->
		</input>
		<reference>
			<!--prop>/autopilot/internal/target-climb-rate-fps</prop-->
			
			<expression>
				<sum>
					<property>/autopilot/internal/target-pitch-deg</property>
					<property>/autopilot/internal/target-pitch-deg-gain2</property>
				</sum>
			</expression>
		</reference>
		<output>
			<!--prop>/controls/flight/elevator-trim</prop-->
			<property>/controls/flight/elevator</property>
		</output>
		<!--config>
			<Kp>-0.01</Kp>
			<beta>1</beta>
			<alpha>0.1</alpha>
			<gamma>0</gamma>
			<Ti>10</Ti>
			<Td>0.00001</Td>
			<u_min>-1</u_min>
			<u_max>1</u_max>
		</config-->
		<config>
			<Kp>-0.025</Kp>
			<Ti>15</Ti>
			
	
			<u_min>-1</u_min>
			<u_max>1</u_max>
		</config>
	</pid-controller>

	<pid-controller>
		<name>Aileron Surface</name>
		<debug type="bool">false</debug>
		<enable>
			<property>/autopilot/internal/heading-hold-deg</property>
			<value type="bool">true</value>
		</enable>
		<input>
			<property>/orientation/roll-deg</property>
		</input>
		<reference>
			<property>/autopilot/internal/target-roll-deg</property>
		</reference>
		<output>
			<property>/controls/flight/aileron</property>
		</output>
		<!--config>
			<Kp>-0.01</Kp>
			<beta>1</beta>
			<alpha>0.1</alpha>
			<gamma>0</gamma>
			<Ti>10</Ti>
			<Td>0.00001</Td>
			<u_min>-1</u_min>
			<u_max>1</u_max>
		</config-->
		<config>
			<Kp>0.015</Kp>
			<Ti>15</Ti>
			<u_min>-1.0</u_min>
			<u_max>1.0</u_max>
		</config>
	</pid-controller>


