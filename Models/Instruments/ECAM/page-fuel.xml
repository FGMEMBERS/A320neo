<?xml version="1.0" encoding="UTF-8" ?>

<!-- Airbus A320 neo for FlightGear -->
<!-- ECAM Engine -->

<PropertyList>	
	<name>Fuel</name>
	<w-base>256</w-base>
	<h-base>256</h-base>

	<layers>
		<layer>
			<name>Fuel-texture</name>
			<w>256</w>
			<h>256</h>
			<texture>
				<path>Aircraft/A320neo/Models/Instruments/ECAM/res/page-fuel.png</path>
				<x1>0.0</x1>
				<y1>0.0</y1>
				<x2>1</x2>
				<y2>1</y2>
			</texture>
			<emissive>true</emissive>
		</layer>

		<layer>
			
			<type>text</type>
			<name>Engine 1 Fuel Used</name>
	 		<color>
		        	<red>0.1</red>
		        	<green>1.0</green>
		        	<blue>0.1</blue>
		    	</color>

			<chunks>
				<chunk>
					<type>number-value</type>
					<!--property>/engines/engine[0]/fuel-consumed-lbs</property-->
					<property>fdm/jsbsim/propulsion/engine[0]/fuel-used-lbs</property>
					<format type="string">%5.0f</format>
					<alignment>left-center</alignment>
				</chunk>
			</chunks>
			<transformations>
				<transformation>
					<type>y-shift</type>
					<offset>88</offset>
				</transformation>
				<transformation>
					<type>x-shift</type>
					<offset>-90</offset>
				</transformation>
			</transformations>
		</layer>
