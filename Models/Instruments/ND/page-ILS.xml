<?xml version="1.0"?>
<PropertyList>
	<name>ILS</name>
	<w-base>256</w-base>
	<h-base>256</h-base>
	<layers>

		<!-- ILS Directional -->
		<layer>
			<condition>
				<and>	
					<equals>
						<property>/instrumentation/nav[0]/nav-loc</property>
						<value>true</value>
					</equals>
					<equals>
						<property>/instrumentation/nav[0]/in-range</property>
						<value>true</value>
					</equals>			
				</and>			
			</condition>
			<name>ILS Heading</name>
			<emissive>true</emissive>
			<w>20</w>
			<h>177</h>
			<texture>
				<path>Aircraft/A320neo/Models/Instruments/ND/res/A320neo_symbols.png</path>

				<!-- Orign is down left-->
				<x1>0.162</x1>
				<y1>0</y1>
				<x2>0.273</x2>
				<y2>1</y2>
			</texture>
			<transformations>
				<!-- ROSE center -->
				<transformation>
					<type>y-shift</type>
					<offset>-12</offset>
				</transformation>
				<!-- Correct our heading deviation -->
				<transformation>
					<type>rotation</type>
					<property>orientation/heading-deg</property>
					<scale>-1</scale>
				</transformation>
				<!-- Correct ILS Source heading -->
				<transformation>
					<type>rotation</type>
					<property>instrumentation/nav/heading-deg</property>
				</transformation>
			</transformations>
		</layer>

		<!-- ILS Deflection bar -->
		<layer>
			<condition>
				<and>	
					<equals>
						<property>/instrumentation/nav[0]/nav-loc</property>
						<value>true</value>
					</equals>
					<equals>
						<property>/instrumentation/nav[0]/in-range</property>
						<value>true</value>
					</equals>			
				</and>			
			</condition>
			<name>ILS Heading</name>
			<emissive>true</emissive>
			<w>4</w>
			<h>77</h>
			<texture>
				<path>Aircraft/A320neo/Models/Instruments/ND/res/A320neo_symbols.png</path>

				<!-- Orign is down left-->
				<x1>0.289</x1>
				<y1>0</y1>
				<x2>0.304</x2>
				<y2>0.535</y2>
			</texture>
			<transformations>
				<!-- ROSE center -->
				<transformation>
					<type>y-shift</type>
					<offset>-12</offset>
				</transformation>
				<!-- Correct our heading deviation -->
				<transformation>
					<type>rotation</type>
					<property>orientation/heading-deg</property>
					<scale>-1</scale>
				</transformation>
				<!-- Correct ILS Source heading -->
				<transformation>
					<type>rotation</type>
					<property>instrumentation/nav/heading-deg</property>
				</transformation>
				<!-- ILS Deflection -->
				<transformation>
					<type>x-shift</type>
					<property>instrumentation/nav[0]/heading-needle-deflection</property>
					<scale>4.124</scale>
				</transformation>
			</transformations>
		</layer>
	<!-- ILS Deflection Horizontal Scale Bar -->
		<layer>
			<condition>
				<and>	
					<equals>
						<property>/instrumentation/nav[0]/nav-loc</property>
						<value>true</value>
					</equals>
					<equals>
						<property>/instrumentation/nav[0]/in-range</property>
						<value>true</value>
					</equals>			
				</and>			
			</condition>
			<name>HorizontalScaleBar</name>
			<emissive>true</emissive>
			<w>7</w>
			<h>77</h>
			<texture>
				<path>Aircraft/A320neo/Models/Instruments/ND/res/A320neo_symbols.png</path>

				<!-- Orign is down left-->
				<x1>0.121</x1>
				<y1>0.554</y1>
				<x2>0.150</x2>
				<y2>0.927</y2>
			</texture>
			<transformations>
				<!-- ROSE center -->
				<transformation>
					<type>y-shift</type>
					<offset>-12</offset>
				</transformation>
				<!-- from vertical to horizontal -->
				<transformation>
					<type>rotation</type>
					<offset>90</offset>
				</transformation>
				<!-- Correct our heading deviation -->
				<transformation>
					<type>rotation</type>
					<property>orientation/heading-deg</property>
					<scale>-1</scale>
				</transformation>
				<!-- Correct ILS Source heading -->
				<transformation>
					<type>rotation</type>
					<property>instrumentation/nav/heading-deg</property>
				</transformation>
			</transformations>
		</layer>

	<!-- GlideSlope Scale -->
		<layer>
			<name>gs scale</name>
			<w>12</w>
			<h>90</h>
			<texture>
				<path>Aircraft/A320neo/Models/Instruments/ND/res/symbols.png</path>
				<x1>0.528</x1>
				<y1>0.470</y1>
				<x2>0.579</x2>
				<y2>0.849</y2>
			</texture>
			<transformations>
				<transformation>
					<type>y-shift</type>
					<offset>-12</offset>
				</transformation>
				<transformation>
					<type>x-shift</type>
					<offset>120</offset>
				</transformation>
			</transformations>
			<emissive>true</emissive>
		</layer>
	<!-- GlideSlope Pointer -->
		<layer>
			<condition>
				<equals>
					<property>/instrumentation/nav[0]/gs-in-range</property>
					<value>true</value>
				</equals>
			</condition>
			<name>gs pointer</name>
			<w>10</w>
			<h>16</h>
			<texture>
				<path>Aircraft/A320neo/Models/Instruments/ND/res/symbols.png</path>
				<x1>0.686</x1>
				<y1>0.833</y1>
				<x2>0.761</x2>
				<y2>0.952</y2>
			</texture>
			<transformations>
				<transformation>
					<type>y-shift</type>
					<offset>-12</offset>
				</transformation>
				<transformation>
					<type>x-shift</type>
					<offset>120</offset>
				</transformation>
				<transformation>
					<type>y-shift</type>
					<property>instrumentation/nav/gs-needle-deflection-norm</property>
					<interpolation>
					<entry><ind>-1</ind><dep>-57.285</dep></entry>
					<entry><ind>0</ind><dep>0</dep></entry>
					<entry><ind>1</ind><dep>57.285</dep></entry>
					</interpolation>
				</transformation>
			</transformations>
			<emissive>true</emissive>
		</layer>

	</layers>
</PropertyList>
