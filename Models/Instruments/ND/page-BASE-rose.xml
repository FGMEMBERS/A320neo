<?xml version="1.0"?>
<PropertyList>
	<name>ROSEbase</name>
	<w-base>256</w-base>
	<h-base>256</h-base>
	<layers>

<!-- Center ROSE Background -->
		<layer>
			<name>ROSE</name>
			<w>225</w>
			<h>225</h>
			<texture>
				<path>Aircraft/A320neo/Models/Instruments/ND/res/hsi2a.png</path>
				<x1>0</x1>
				<y1>0</y1>
				<x2>1</x2>
				<y2>1</y2>
			</texture>
			<transformations>
				<!-- ROSE center -->
				<transformation>
					<type>y-shift</type>
					<offset>-12</offset>
				</transformation>
				<!-- ROSE turn -->
				<transformation>
					<type>rotation</type>
					<property>orientation/heading-magnetic-deg</property>
					<scale>-1</scale>
				</transformation>
			</transformations>
			<emissive>true</emissive>
		</layer>

		<layer>
			<name>hdgbug</name>
			<emissive>true</emissive>
			<w>14</w>
			<h>14</h>
			<texture>
				<path>Aircraft/A320neo/Models/Instruments/ND/res/A320neo_symbols.png</path>

				<!-- Orign is down left-->
				<x1>0.742</x1>
				<y1>0.921</y1>
				<x2>0.832</x2>
				<y2>1</y2>
			</texture>
			<transformations>
				<!-- ROSE center -->
				<transformation>
					<type>y-shift</type>
					<offset>-12</offset>
				</transformation>
				<!-- first: Rotate fron layer center -->
				<transformation>
					<type>rotation</type>
					<property>autopilot/internal/fdm-heading-bug-error-deg</property>
				</transformation>
				<!-- second: shift from rotation origin -->
				<transformation>
					<type>y-shift</type>
					<offset>90</offset>
				</transformation>
			</transformations>
		</layer>

		<layer>
			<name>aircraft</name>
			<emissive>true</emissive>
			<w>30</w>
			<h>30</h>
			<texture>
				<path>Aircraft/A320neo/Models/Instruments/ND/res/A320neo_symbols.png</path>

				<!-- Orign is down left-->
				<x1>0.824</x1>
				<y1>0.656</y1>
				<x2>1</x2>
				<y2>0.832</y2>
			</texture>
			<transformations>
				<!-- ROSE center -->
				<transformation>
					<type>y-shift</type>
					<offset>-12</offset>
				</transformation>
				<!-- Rotate fro for track -->
				<!--transformation>
					<type>rotation</type>
					<property>autopilot/internal/fdm-heading-bug-error-deg</property>
				</transformation-->

			</transformations>
		</layer>


	</layers>
</PropertyList>
