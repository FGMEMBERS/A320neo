<?xml version="1.0"?>


<PropertyList>
    <name>VORtext</name>
    <w-base>256</w-base>
    <h-base>256</h-base>
    <params>
      <inputs>
        <lh-vor-adf>instrumentation/efis[0]/inputs/vor-adf-1</lh-vor-adf>
        <rh-vor-adf>instrumentation/efis[0]/inputs/vor-adf-2</rh-vor-adf>
      </inputs>
    </params>

    <layers>

        <layer>
            <name>bkgrd</name>
            <w>256</w>
            <h>256</h>
            <texture>
                <path>Aircraft/A320neo/Models/Instruments/MFD/transparent.png</path>
                <x1>0.0</x1>
                <y1>0.0</y1>
                <x2>1</x2>
                <y2>1</y2>
            </texture>
        <emissive>true</emissive>
        </layer>

        <layer>
            <name>VOR num</name>
            <type>text</type>
            <font>arial_black</font>
            <point-size>7</point-size>
            <color>
                <red>0.0</red>
                <green>1.0</green>
                <blue>0.0</blue>
            </color>
            <chunks>
                <chunk>
                    <type>literal</type>
                    <text>VOR L</text>
                </chunk>
            </chunks>
            <transformations>
                <transformation>
                    <type>x-shift</type>
                    <offset>45</offset>
                </transformation>
                <transformation>
                    <type>y-shift</type>
                    <offset>118</offset>
                </transformation>
            </transformations>
        </layer>

        <layer>
            <name>VOR ident</name>
            <type>text</type>
            <font>arial_black</font>
            <point-size>7</point-size>
            <color>
                <red>0.0</red>
                <green>1.0</green>
                <blue>0.0</blue>
            </color>
            <chunks>
                <chunk>
                    <type>text-value</type>
                    <property>instrumentation/nav/nav-id</property>
                </chunk>
            </chunks>
            <transformations>
                <transformation>
                    <type>x-shift</type>
                    <offset>85</offset>
                </transformation>
                <transformation>
                    <type>y-shift</type>
                    <offset>118</offset>
                </transformation>
            </transformations>
        </layer>

        <layer>
            <name>VOR course</name>
            <type>text</type>
            <font>arial_black</font>
            <point-size>7</point-size>
            <color>
                <red>0.0</red>
                <green>1.0</green>
                <blue>0.0</blue>
            </color>
            <chunks>
                <chunk>
                    <type>number-value</type>
                    <property>instrumentation/nav/radials/selected-deg</property>
                    <format>%03.0f</format>
                </chunk>
            </chunks>
            <transformations>
                <transformation>
                    <type>x-shift</type>
                    <offset>85</offset>
                </transformation>
                <transformation>
                    <type>y-shift</type>
                    <offset>108</offset>
                </transformation>
            </transformations>
        </layer>

        <layer>
            <name>VOR dist</name>
            <type>text</type>
            <font>arial_black</font>
            <point-size>7</point-size>
            <color>
                <red>0.0</red>
                <green>1.0</green>
                <blue>0.0</blue>
            </color>
            <chunks>
                <chunk>
                    <type>number-value</type>
                    <property>instrumentation/nav/nav-distance</property>
                    <scale>0.000539</scale>
                    <format>%03.1f</format>
                </chunk>
            </chunks>
            <transformations>
                <transformation>
                    <type>x-shift</type>
                    <offset>85</offset>
                </transformation>
                <transformation>
                    <type>y-shift</type>
                    <offset>98</offset>
                </transformation>
            </transformations>
        </layer>


        <layer>
            <condition>
                <property>instrumentation/nav/to-flag</property>
            </condition>
            <name>To Flag</name>
            <type>text</type>
            <font>arial_black</font>
            <point-size>6</point-size>
            <color>
                <red>0.0</red>
                <green>1.0</green>
                <blue>0.0</blue>
            </color>
            <chunks>
                <chunk>
                    <type>literal</type>
                    <text>TO</text>
                </chunk>
            </chunks>
            <transformations>
                <transformation>
                    <type>x-shift</type>
                    <offset>75</offset>
                </transformation>
                <transformation>
                    <type>y-shift</type>
                    <offset>-85</offset>
                </transformation>
            </transformations>
        </layer>

        <layer>
            <condition>
                <property>instrumentation/nav/from-flag</property>
            </condition>
            <name>From Flag</name>
            <type>text</type>
            <font>arial_black</font>
            <point-size>6</point-size>
            <color>
                <red>0.0</red>
                <green>1.0</green>
                <blue>0.0</blue>
            </color>
            <chunks>
                <chunk>
                    <type>literal</type>
                    <text>FROM</text>
                </chunk>
            </chunks>
            <transformations>
                <transformation>
                    <type>x-shift</type>
                    <offset>75</offset>
                </transformation>
                <transformation>
                    <type>y-shift</type>
                    <offset>-85</offset>
                </transformation>
            </transformations>
	  </layer>

    </layers>


</PropertyList>
